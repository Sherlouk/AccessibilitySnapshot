use_frameworks!
use_modular_headers!
platform :ios, '11.0'

target 'AccessibilitySnapshotDemo' do
	pod 'Paralayout', :git => 'https://github.com/square/Paralayout.git', :branch => 'master'

	target 'SnapshotTests' do
		inherit! :search_paths

		pod 'AccessibilitySnapshot', :path => '../AccessibilitySnapshot.podspec'
	end

	target 'SnapshotTestingTests' do
		inherit! :search_paths
		# We bring AccessibilitySnapshot in through Swift Package Manager.
		# We only need this for Paralayout which doesn't support SPM.
	end
end

project 'AccessibilitySnapshot.xcodeproj'

install! 'cocoapods', :disable_input_output_paths => true
